@{
    ViewData["Title"] = "Contact Me";
}

    <div class="container">
        <h3 class="display-4">Contact</h3>
        <form asp-action="Create">
            <div class="form-group">
                <label for="emailAddressInput">Email address</label>
                <input type="email" name="FromAddress" class="form-control" id="FromAddress" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="messageInput">Message</label>
                <input type="text" name="Body" class="form-control" id="Body" placeholder="I would like to know more about taking lessons with you.">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
